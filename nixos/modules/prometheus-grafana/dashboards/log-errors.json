      "title": "Error Rate by Unit",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (unit) (rate({job=\"systemd-journal\"} |~ \"(?i)error|failed|critical\" [5m]))",
          "legendFormat": "{{ unit }}"
        }
      ]
    },
    {
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "id": 2,
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto",
        "reduceOptions": { "calcs": ["sum"] },
        "textMode": "auto"
      },
      "title": "Errors by Unit (Last Hour)",
      "type": "stat",
      "targets": [
        {
          "expr": "sum by (unit) (count_over_time({job=\"systemd-journal\"} |~ \"(?i)error|failed|critical\" [1h]))",
          "legendFormat": "{{ unit }}"
        }
      ]
    },
    {
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 50,
            "showPoints": "never",
            "stacking": { "mode": "normal" }
          }
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
